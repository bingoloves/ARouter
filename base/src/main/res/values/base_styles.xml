<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Activity之间跳转出现短暂黑屏的解决方法。类似overridePendingTransition(R.anim.xxx, 0);-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- toolbar菜单样式 -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextAppearance">@style/ToolbarMenuText</item>
        <!-- 设置Menu菜单的字体颜色 -->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- toolbar弹出菜单样式 -->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">#212121</item>
        <!-- 设置Menu菜单的背景色 -->
        <item name="android:itemBackground">#212121</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- toolbar标题样式 -->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- toolbar菜单文字尺寸 -->
    <style name="ToolbarMenuText" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
